<!doctype html>
<html lang="ca" data-theme="light">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ description | safe | trim }}">
    <meta name="version" content="{{versio}}">
    <title>{{ titol or siteData.name }}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css">
    <link rel="stylesheet" href="/assets/afa.css">
  </head>
  <body>
    <main class="container">
    <header>
      <nav>
        <ul>
          <li>
            <a href="/">
              <img alt="Logo de l'AFA" src="/assets/imgs/logo_afa_color_500.png"/>
            </a>
          </li>
        </ul>
        <ul>
          {% for seccio in seccions %}
          <li class="width-wide"><a href="{{seccio.url}}">{{ seccio.titol }}</a></li>
          {% endfor %}
          <li class="width-small">
              <details role="list" dir="rtl">
                  <summary aria-haspopup="listbox">
                      Seccions
                  </summary>
                  <ul role="listbox">
                      {% for seccio in seccions %}
                      <li role="option"><a href="{{seccio.url}}">{{ seccio.titol }}</a></li>
                      {% endfor %}
                  </ul>
              </details>
          </li>
      </ul>
      </nav>
    </header>
    <article>
      <header>
        <h1>
          {{titol}}
        </h1>
        {% if content | toc %}
            {{ content | toc | safe }}
        {% endif %}
      </header>
      <main>
        <p>Actualitzat a <span data-tooltip="VersiÃ³ {{ versio }}"  data-placement="bottom">
        {{ actualitzat | comAData }}
        </span></p>

        {{ content | safe }}
      </main>
    </article>
    </main>
  </body>
</html>